# Docker Compose 환경 변수 설정 예시
# 이 파일을 .env로 복사하여 사용하세요: cp .env.example .env

# ========================================
# 데이터베이스 설정 (PostgreSQL)
# ========================================
POSTGRES_DB=ddalkkak_db
POSTGRES_USER=ddalkkak_user
POSTGRES_PASSWORD=ddalkkak_password
POSTGRES_PORT=5432

# ========================================
# 백엔드 설정 (Spring Boot)
# ========================================
BACKEND_PORT=8080
SPRING_PROFILES_ACTIVE=local
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true

# ========================================
# 프론트엔드 설정 (Next.js)
# ========================================
FRONTEND_PORT=3000
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:8080

# ========================================
# API 키 설정
# ========================================
# Kakao REST API Key (Local API용)
KAKAO_REST_API_KEY=your_kakao_rest_api_key_here

# OpenAI API Key (장소 큐레이션용)
OPENAI_API_KEY=your_openai_api_key_here

